<script>
  document.querySelectorAll(".type-label").forEach((span) => {
    const type = span.textContent.trim().toLowerCase();
    if (type === "income") {
      span.classList.add("income");
    } else if (type === "expense") {
      span.classList.add("expense");
    }
  });
  const balance=document.querySelector("#balance")
  let balanceText = balance.textContent.trim();
  const sum= document.querySelector(".sum")

// Remove "Ksh" and any commas if present
let numericBalance = parseFloat(balanceText.replace("Ksh", "").replace(",", "").trim());

  if(numericBalance<=0){
    
    sum.removeAttribute("hidden")
    sum.classList.add("text-danger", "fw-bold", "shake");
  }


</script>
